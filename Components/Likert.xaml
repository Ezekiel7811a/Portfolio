<?xml version="1.0" encoding="utf-8" ?>
<Grid xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
      xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
      xmlns:model="clr-namespace:BombQuestionnaire.Model"
      x:Class="BombQuestionnaire.Components.Likert"
      x:DataType="model:LikertQuestion"
      ColumnDefinitions=".25*, *"
      RowDefinitions="*, *">

    <Label x:Name="QuestionLabel"
           Grid.RowSpan="2"
           VerticalOptions="Center"/>
    <CollectionView ItemsSource="{Binding Options}"
                    SelectionMode="None"
                    Grid.Column="1"
                    Grid.ColumnSpan="4"
                    Grid.RowSpan="2"
                    ItemsLayout="HorizontalList">
        <CollectionView.ItemTemplate>
            <DataTemplate x:DataType="model:Option">
                <VerticalStackLayout Padding="10">
                    <Label Text="{Binding Name}"
                           HorizontalOptions="Center"
                           FontSize="12"/>
                    <RadioButton HorizontalOptions="Center"/>
                </VerticalStackLayout>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</Grid>
